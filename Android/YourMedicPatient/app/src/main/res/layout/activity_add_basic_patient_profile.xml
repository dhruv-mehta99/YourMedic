<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBasicPatientProfile"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="age"
        android:id="@+id/edt_age"
        android:fontFamily="@font/segoe_ui"
        android:textSize="17sp"
        android:textColor="@color/black"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Enter Your Problem"
        android:id="@+id/edt_problem"
        android:fontFamily="@font/segoe_ui"
        android:textSize="17sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:id="@+id/med_name_1"
            android:hint="Enter Medicine1 Name"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/med_since_1"
            android:hint="Start date"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:id="@+id/med_name_2"
            android:hint="Enter Medicine1 Name"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/med_since_2"
            android:hint="Start date"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"/>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/btn_data_submit"/>

</LinearLayout>