<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/dark_txt_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine 1"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/light_txt_background"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/underline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Time"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Quanitity"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Days"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:weightSum="4"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Moprning"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_spinner_medicine_mor"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="-1dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="2"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:id="@+id/tv_medicine_quant_mor"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/underline"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="-1dp"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="2"

                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_medicine_days_mor"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/underline"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="4"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Afternoon"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_spinner_medicine_aft"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="-1dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="2"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:id="@+id/tv_medicine_quant_aft"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/underline"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="-1dp"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="2"

                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_medicine_days_aft"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/underline"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="4"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Night"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_spinner_medicine_night"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="45dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="-1dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="2"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:id="@+id/tv_medicine_quant_night"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/underline"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="-1dp"
                android:orientation="vertical"
                android:layout_marginLeft="50dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="2"

                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_medicine_days_night"
                    android:textColor="@color/white"/>
                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/underline"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_medicine"
        android:text="Remove"
        android:textSize="15sp"
        android:background="@drawable/btn_medicine_background"/>

</LinearLayout>