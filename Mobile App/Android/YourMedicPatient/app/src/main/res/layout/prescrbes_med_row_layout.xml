<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1."
        android:fontFamily="@font/segoe_ui"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/txt_srno_prescribed"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="Medicine 1"
        android:textSize="12sp"
        android:paddingHorizontal="5dp"
        android:fontFamily="@font/segoe_ui"
        android:background="@drawable/dark_txt_background"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/prescribed_med_name"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"
            android:textSize="12sp"
            android:id="@+id/morning_qty"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/med_schedule_underline"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"
            android:textSize="12sp"
            android:id="@+id/afternoon_qty"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/med_schedule_underline"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"
            android:textSize="12sp"
            android:id="@+id/night_qty"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/med_schedule_underline"/>


    </LinearLayout>

</LinearLayout>