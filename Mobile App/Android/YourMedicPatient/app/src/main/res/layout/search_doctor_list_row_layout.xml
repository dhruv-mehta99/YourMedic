<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_marginVertical="10dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="10dp"
    android:background="@drawable/list_txt_background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_search_doctor_full_name"
        android:text="Dhruv Mehta"
        android:fontFamily="@font/segoe_ui"
        android:textSize="17sp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="left|center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="M.D. (Doctor of Medicine)"
            android:fontFamily="@font/segoe_ui"
            android:textColor="@color/black"
            android:id="@+id/txt_search_doctor_designation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Ahmedabad"
            android:fontFamily="@font/segoe_ui"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:id="@+id/txt_search_doctor_address"/>
    </RelativeLayout>



</LinearLayout>